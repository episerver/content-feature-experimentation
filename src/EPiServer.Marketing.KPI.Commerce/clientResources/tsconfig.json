{
    "compilerOptions": {
        "target": "ES5",
        "module": "esnext",
        "moduleResolution": "Node",
        "lib": ["DOM", "ESNext"],
        "jsx": "react",
        "noEmit": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
