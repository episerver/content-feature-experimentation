@model EPiServer.Reference.Commerce.Site.Features.Navigation.ViewModels.FooterViewModel
@{
    Layout = null;
}

<footer class="footer">
    <div class="site-wrapper container-fluid">
        <div class="row">
            <div class="column  col-xs-12  col-sm-3  col--leading">
                <h3>@Html.Translate("/Footer/CompanyInformation/Header")</h3>
                <p>@Html.Translate("/Footer/CompanyInformation/Text")</p>
            </div>
            <div class="column  col-xs-12  col-sm-3  col--center">
                <h3>@Html.Translate("/Footer/Newsletter/Header")</h3>
                <div class="input-group">
                    <input type="text" placeholder="name@example.com" class="form-control  form--grey" />
                    <span class="input-group-btn">
                        <button class="btn  btn-default" type="button">
                            @Html.Translate("/Footer/Newsletter/Button")
                            <span class="mail-icon"></span>
                        </button>
                    </span>
                </div>
            </div>
            <div class="column  col-xs-12  col-sm-3  col--leading">
                <h3>@Html.Translate("/Footer/Legal/Header")</h3>
                @Html.PropertyFor(model => model.FooterLinks)
            </div>
        </div>
    </div>
</footer>